<p style="color: green"><%= notice %></p>

<h1>Roles</h1>

      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Role name</th>
              <th scope="col" colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.id %></td>
              <td><%= role.role_name %></td>
              <td><%= link_to "Show", role %></td>
               <td><%= link_to "Edit", edit_role_path(role.id) %></td>
              <td><%= link_to "Delete", role, method: :delete, data: {turbo_method: :delete, 
                                                                            turbo_confirm: 'Are you sure?'}  %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

<%= link_to "New role", new_role_path, class: 'btn btn-primary' %>
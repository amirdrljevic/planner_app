<p style="color: green"><%= notice %></p>

<div class="card w-75 mx-auto">
  <h5 class="card-header">Roles</h5>
  <div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Role name</th>
              <th scope="col" colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.id %></td>
              <td><%= role.role_name %></td>
              <td>
                <div class="dropdown">
                  <button class="btn btn-sm btn-transparent dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Actions</button>
                  <ul class="dropdown-menu">
                    <li><button class="dropdown-item" type="button"><%= link_to "Show", role, class: 'text-secondary' %></button></li>
                    <li><button class="dropdown-item" type="button"><%= link_to "Edit", edit_role_path(role.id), class: 'text-secondary' %></button></li>
                    <li><button class="dropdown-item" type="button"><%= link_to "Delete", role, class: 'text-danger', method: :delete, data: {turbo_method: :delete, 
                                                                            turbo_confirm: 'Are you sure?'}  %></button></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
  </div>
  <div class="card-footer text-muted">
    <%= link_to "New role", new_role_path, class: 'btn btn-outline-primary btn-sm' %>
  </div>
</div>      
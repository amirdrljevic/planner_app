<p style="color: green"><%= notice %></p>

<h1>Roles</h1>

<div id="roles" class="table-title">

  <table class="table-fill"> 
    <thead>
      <tr>
          <td class="text-left">ID</td>
          <td class="text-left">Role</td>
          <td class="text-left"></td>
      </tr>
    </thead>
    <tbody class="table-hover">
      <% @roles.each do |role| %>
        <tr>
          <td class="text-left"><%=  role.id %></td>
          <td class="text-left"><%=  role.role_name %></td>
          <td class="text-left"><%= link_to "Show this role", role %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New role", new_role_path %>

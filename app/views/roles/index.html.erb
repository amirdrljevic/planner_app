<p style="color: green"><%= notice %></p>

<div class="card">
  <h5 class="card-header">Roles</h5>
  <div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Role name</th>
              <th scope="col" colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.id %></td>
              <td><%= role.role_name %></td>
              <td><%= link_to "Show", role, class: 'text-secondary' %></td>
               <td><%= link_to "Edit", edit_role_path(role.id), class: 'text-secondary' %></td>
              <td><%= link_to "Delete", role, class: 'text-danger', method: :delete, data: {turbo_method: :delete, 
                                                                            turbo_confirm: 'Are you sure?'}  %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
  </div>
  <div class="card-footer text-muted">
    <%= link_to "New role", new_role_path, class: 'btn btn-outline-primary btn-sm' %>
  </div>
</div>      
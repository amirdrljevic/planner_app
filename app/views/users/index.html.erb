<div class="card">
  <h5 class="card-header">Users</h5>
  <div class="card-body">
    <div class="table-responsive py-5">
        <table class="table table-striped table-sm table-bordered">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">First name</th>
              <th scope="col">Last name</th>
              <th scope="col">E-mail</th>
              <th scope="col">Date of Birth</th>
              <th scope="col">Company</th>
              <th scope="col">Department</th>
              <th scope="col">Role</th>
              <th scope="col">Position</th>
              <th scope="col">Office Phone</th>
              <th scope="col">Mobile Phone</th>
              <th scope="col">Private Phone</th>
              <th scope="col" colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= l user.date_of_birth, format: '%_d. %B %Y.' %></td>
              <td><%= user.company.company_name %></td>
              <td><%= user.department.department_name %></td>
              <td><%= user.role.role_name %></td>
              <td><%= user.position %></td>
              <td><%= user.office_phone %></td>
              <td><%= user.mobile_phone %></td>
              <td><%= user.private_phone %></td>

              <td>
                <div class="dropdown">
                  <button class="btn btn-sm btn-transparent dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Actions</button>
                  <ul class="dropdown-menu">
                    <li><button class="dropdown-item" type="button"><%= link_to "Show", user, class: 'text-secondary' %></button></li>
                    <li><button class="dropdown-item" type="button"><%= link_to "Edit", edit_user_registration_path(user.id), class: 'text-secondary' %></button></li>
                    <li><button class="dropdown-item" type="button"><%= link_to "Delete", user, class: 'text-danger', method: :delete, data: {turbo_method: :delete, 
                                                                            turbo_confirm: 'Are you sure?'}  %></button></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
  </div>
  <div class="card-footer text-muted">
  <!--TODO: User is signed in already so no new users can be created -->
    <%= link_to "Create new user", new_user_path, class: 'btn btn-outline-primary btn-sm' %>
        <caption>There are: <%= User.count %> users</caption>


  </div>
</div>     
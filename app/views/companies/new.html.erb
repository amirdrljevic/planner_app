<%= notice %>
<div class="card">
  <h5 class="card-header">New company</h5>
  <div class="card-body">
    <%= form_with(model: @company , local: true) do |f| %>

      <table>
        <tr>
          <td> 
            <%= f.label :company_name, "Company name:" %>       
          </td>
          <td>
            <%= f.text_field :company_name, placeholder: "company example" %>
          </td>          
        </tr>

        <tr>
          <td>   
            <%= f.label :street_address, "Street address:" %>     
          </td>
          <td>
            <%= f.text_field :street_address, placeholder:"first street" %>
          </td>          
        </tr>

        <tr>
          <td>     
            <%= f.label :postal_code, "Postal code:" %>   
          </td>
          <td>
            <%= f.text_field :postal_code, placeholder:"313"%>
          </td>          
        </tr>

        <tr>
          <td>  
            <%= f.label :city, "City:" %>      
          </td>
          <td>
            <%= f.text_field :city, placeholder:"Madrid" %>
          </td>          
        </tr>                

        <tr>
          <td>   
            <%= f.label :country, "Country :" %>     
          </td>
          <td>
            <%= f.text_field :country, placeholder:"Wales" %>
          </td>          
        </tr>                

        <tr>
          <td>        
          </td>
          <td>
            <%= f.submit "Save", class: "btn btn-outline-primary btn-sm" %>
          </td>          
        </tr>                
      </table>        
    <% end %>
    <br>
  </div>
  <div class="card-footer text-muted">
    <%= link_to "Back to companies", companies_path, class: "btn btn-outline-secondary btn-sm"  %>
  </div>
</div>
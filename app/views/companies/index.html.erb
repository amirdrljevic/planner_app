<p style="color: green"><%= notice %></p>
<div class="card w-75 mx-auto">
  <h5 class="card-header">Companies</h5>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col" >#</th>
            <th scope="col" >Company name</th>
            <th scope="col" >Address</th>
            <th scope="col" >Postal Code</th>
            <th scope="col" >City</th>
            <th scope="col" >Country</th>
            <th scope="col"  colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @companies.each do |company| %>
            <tr>
              <td><%= company.id %></td>
              <td><%= company.company_name %></td>
              <td> <%= company.street_address %></td>
              <td> <%= company.postal_code %></td>
              <td> <%= company.city %></td>
              <td> <%= company.country %></td>
              <td>
                <div class="dropdown">
                  <button class="btn btn-sm btn-transparent dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Actions</button>
                  <ul class="dropdown-menu">
                    <li><button class="dropdown-item" type="button"><%= link_to "Show", company, class: 'text-secondary' %></button></li>
                    <li><button class="dropdown-item" type="button"><%= link_to "Edit", edit_company_path(company.id), class: 'text-secondary' %></button></li>
                    <li><button class="dropdown-item" type="button"><%= link_to "Delete", company, class: 'text-danger', method: :delete, data: {turbo_method: :delete, 
                                                                            turbo_confirm: 'Are you sure?'}  %></button></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer text-muted">
    <%= link_to "New company", new_company_path, class: 'btn btn-outline-primary btn-sm'%>
    <% if Company.count == 1%>
          <caption>There is: <%= Company.count %> company</caption>
        <% else %>
          <caption>There are: <%= Company.count %> companies</caption>
        <% end %>
  </div>
</div>
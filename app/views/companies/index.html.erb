<p style="color: green"><%= notice %></p>
<div class="card w-75 mx-auto">
  <h5 class="card-header">Companies</h5>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col" class="text-center">Company name</th>
            <th scope="col" class="text-center">Address</th>
            <th scope="col" class="text-center">Postal Code</th>
            <th scope="col" class="text-center">City</th>
            <th scope="col" class="text-center">Country</th>
            <th scope="col" class="text-center" colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @companies.each do |company| %>
            <tr>
              <td class="text-center"><%= company.id %></td>
              <td class="text-center"><%= company.company_name %></td>
              <td class="text-center"> <%= company.street_address %></td>
              <td class="text-center"> <%= company.postal_code %></td>
              <td class="text-center"> <%= company.city %></td>
              <td class="text-center"> <%= company.country %></td>
              <td class="text-center">
                <div class="dropdown">
                  <button class="btn btn-sm btn-transparent dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Actions</button>
                  <ul class="dropdown-menu">
                    <li><button class="dropdown-item" type="button"><%= link_to "Show", company, class: 'text-secondary' %></button></li>
                    <li><button class="dropdown-item" type="button"><%= link_to "Edit", edit_company_path(company.id), class: 'text-secondary' %></button></li>
                    <li><button class="dropdown-item" type="button"><%= link_to "Delete", company, class: 'text-danger', method: :delete, data: {turbo_method: :delete, 
                                                                            turbo_confirm: 'Are you sure?'}  %></button></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer text-muted">
    <%= link_to "New company", new_company_path, class: 'btn btn-outline-primary btn-sm'%>
  </div>
</div>
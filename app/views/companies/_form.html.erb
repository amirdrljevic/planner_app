<%= form_with(model: @company , local: true) do |f| %>
      <%= render "home/error_msgs", model_name: @company %>
      <table>
        <tr>
          <td> 
            <%= f.label :company_name, "Company name:" %>       
          </td>
          <td>
            <%= f.text_field :company_name, class: "form-control form-control-sm" %>
          </td>          
        </tr>

        <tr>
          <td>   
            <%= f.label :street_address, "Street address:" %>     
          </td>
          <td>
            <%= f.text_field :street_address, class: "form-control form-control-sm" %>
          </td>          
        </tr>

        <tr>
          <td>     
            <%= f.label :postal_code, "Postal code:" %>   
          </td>
          <td>
            <%= f.text_field :postal_code, class: "form-control form-control-sm" %>
          </td>          
        </tr>

        <tr>
          <td>  
            <%= f.label :city, "City:" %>      
          </td>
          <td>
            <%= f.text_field :city, class: "form-control form-control-sm" %>
          </td>          
        </tr>                

        <tr>
          <td>   
            <%= f.label :country, "Country :" %>     
          </td>
          <td>
            <%= f.text_field :country, class: "form-control form-control-sm" %>
          </td>          
        </tr>                

        <tr>
          <td>        
          </td>
          <td>
            <%= f.submit "Save", class: "btn btn-outline-primary btn-sm" %>
          </td>          
        </tr>                
      </table>        
    <% end %>
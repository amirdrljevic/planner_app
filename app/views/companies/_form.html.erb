<%= simple_form_for company, html: { class: "company form" } do |f| %>
  <% if company.errors.any? %>
    <div class="error-message">
      <%= company.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
  <div class="row">
    <%= f.input :company_name, input_html: { autofocus: true } %>

    <%= f.input :street_address, input_html: { autofocus: true } %>

    <%= f.input :postal_code, input_html: { autofocus: true } %>

    <%= f.input :city, input_html: { autofocus: true } %>

    <%= f.input :country, as: :string, input_html: { autofocus: true } %>
  </div>

  <div>
    <%= link_to "Cancel", companies_path, class: "btn btn--light" %>
    <%= f.submit class: "btn btn--secondary" %>
  </div>
<% end %>
<%= form_with(model: @department , local: true) do |f| %>
      <%= render "home/error_msgs", model_name: @department %>
      <table>
        <tr>
          <td>
            <%= f.label :department_name, "Department name:" %>
          </td>
          <td>
            <%= f.text_field :department_name, class: "form-control form-control-sm" %>
          </td>
        </tr>

        <tr>
          <td>        
          </td>
          <td>
            <%= f.submit "Save", class: "btn btn-outline-primary btn-sm" %>
          </td>          
        </tr>   

      </table>
    <% end %>
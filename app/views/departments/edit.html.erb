<%= notice %>
<div class="card">
  <h5 class="card-header">Edit department</h5>
  <div class="card-body">
    <%= form_with(model: @department , local: true) do |f| %>
    
      <table>
        <tr>
          <td>
            <%= f.label :department_name, "Department name:" %>
          </td>
          <td>
            <%= f.text_field :department_name %>
          </td>
        </tr>

        <tr>
          <td>        
          </td>
          <td>
            <%= f.submit "Save", class: "btn btn-outline-primary btn-sm" %>
          </td>          
        </tr>   

      </table>
    <% end %>
    <br>
  </div>
  <div class="card-footer text-muted">
    <%= link_to "Show this department", @department,  class: "btn btn-outline-secondary btn-sm" %>
    <%= link_to "Back to departments", departments_path, class: "btn btn-outline-secondary btn-sm"  %>
  </div>
</div>

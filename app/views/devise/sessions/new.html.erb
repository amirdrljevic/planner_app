
  <div class="main-signin text-center">
    <div class="form-signin w-100 m-auto">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <img class="mb-4" src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Bootstrap_logo.svg/1200px-Bootstrap_logo.svg.png" alt="" width="72" height="57">
          <h1 class="h3 mb-3 fw-normal">Login</h1>
          <div class="form-floating mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatinginput", placeholder: "Email" %>
            <label for="floatingInput">Email address</label>
          </div>

          <div class="form-floating">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "floatingpassword", placeholder: "Password" %>
            <label for="floatingInput">Password</label>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="checkbox mb-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
        <p class="mt-5 mb-3 text-muted">&copy; 2022</p>
    </div>
  </div>
